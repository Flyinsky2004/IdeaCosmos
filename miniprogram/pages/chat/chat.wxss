/* 全局变量 */
page {
  --primary-color: #3b82f6;
  --primary-light: #60a5fa;
  --primary-dark: #2563eb;
  --background-light: #f9fafb;
  --background-dark: #18181b;
  --border-light: #e5e7eb;
  --border-dark: #27272a;
  --text-light: #1f2937;
  --text-dark: #e5e7eb;
  --text-secondary-light: #6b7280;
  --text-secondary-dark: #9ca3af;
}

/* 聊天页面样式 */
.chat-container {
  display: flex;
  height: 100vh;
  background-color: var(--background-light);
  position: relative;
  overflow: hidden;
}

/* 暗色模式适配 */
@media (prefers-color-scheme: dark) {
  .chat-container {
    background-color: var(--background-dark);
  }
}

/* 侧边栏切换按钮 */
.sidebar-toggle {
  position: fixed;
  top: 20rpx;
  left: 20rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--primary-color);
  border-radius: 50%;
  z-index: 101;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.sidebar-toggle .iconfont {
  color: white;
  font-size: 40rpx;
}

@media (prefers-color-scheme: dark) {
  .sidebar-toggle {
    background-color: var(--primary-dark);
  }
}

/* 侧边栏样式 */
.sidebar {
  height: 100%;
  background-color: #f3f4f6;
  border-right: 1px solid var(--border-light);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  z-index: 100;
  position: relative;
}

.sidebar.expanded {
  width: 300rpx;
}

.sidebar.collapsed {
  width: 0;
  border-right: none;
  overflow: hidden;
}

.sidebar-header {
  padding: 20rpx;
  border-bottom: 1px solid var(--border-light);
  display: flex;
  flex-direction: column;
  position: relative;
  min-height: 60rpx;
}

@media (prefers-color-scheme: dark) {
  .sidebar {
    background-color: var(--background-dark);
    border-color: var(--border-dark);
  }
}

/* 新建对话按钮 - 只保留顶部栏中的样式 */
.top-bar .new-chat-btn {
  width: auto;
  min-width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: var(--primary-color);
  color: white;
  font-size: 26rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  transition: background-color 0.2s;
}

.top-bar .new-chat-btn:active {
  background-color: var(--primary-dark);
}

.primary-btn {
  width: 100%;
  background-color: #3b82f6;
  color: white;
  border-radius: 10rpx;
  font-size: 28rpx;
  padding: 16rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.primary-btn:active {
  background-color: #2563eb;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.iconfont {
  font-size: 36rpx;
}

.icon-add {
  margin-right: 10rpx;
}

/* 历史记录列表 */
.chat-list {
  flex: 1;
  overflow-y: auto;
}

.chat-item {
  padding: 24rpx 20rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  transition: all 0.2s;
  position: relative;
}

.chat-item.active {
  background-color: rgba(59, 130, 246, 0.1);
}

.chat-item-content {
  flex: 1;
  overflow: hidden;
  position: relative;
}

.chat-title {
  font-size: 28rpx;
  color: var(--text-light);
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.chat-time {
  font-size: 24rpx;
  color: var(--text-secondary-light);
  display: block;
  margin-top: 4rpx;
}

.delete-btn {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(243, 244, 246, 0.8);
  border-radius: 50%;
  opacity: 0;
  transition: opacity 0.2s;
}

.chat-item:active .delete-btn {
  opacity: 1;
}

/* 主内容区域 */
.main-area {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  position: relative;
  margin-left: 0;
  transition: margin-left 0.3s ease;
}

/* 顶部栏 */
.top-bar {
  height: 100rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  background-color: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid var(--border-light);
  position: relative;
  z-index: 10;
}

.menu-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
}

.top-bar .chat-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-light);
  text-align: center;
  margin: 0 20rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 消息列表 */
.message-list {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
  -webkit-overflow-scrolling: touch;
}

.messages-container {
  max-width: 960rpx;
  margin: 0 auto;
  padding-bottom: 20rpx;
}

.message {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  animation: fadeIn 0.3s ease;
  position: relative;
}

.message-user {
  flex-direction: row-reverse;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 头像 */
.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
}

.avatar image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 消息气泡 */
.message-bubble {
  max-width: 60%;
  padding: 20rpx 24rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  line-height: 1.6;
  word-break: break-word;
}

.message-user .message-bubble {
  background-color: var(--primary-color);
  color: white;
  border-top-right-radius: 4rpx;
}

.message-ai .message-bubble {
  background-color: #f3f4f6;
  color: var(--text-light);
  border-top-left-radius: 4rpx;
}

/* 输入区域 */
.input-area {
  padding: 20rpx 30rpx;
  background-color: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-top: 1px solid var(--border-light);
  position: relative;
  z-index: 10;
}

.input-container {
  max-width: 960rpx;
  margin: 0 auto;
  display: flex;
  gap: 20rpx;
  align-items: flex-end;
}

.message-input {
  flex: 1;
  min-height: 80rpx;
  max-height: 200rpx;
  padding: 20rpx 24rpx;
  background-color: white;
  border: 1px solid var(--border-light);
  border-radius: 40rpx;
  font-size: 28rpx;
  line-height: 1.5;
  transition: all 0.3s ease;
}

.message-input:focus {
  border-color: var(--primary-color);
  box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.1);
}

.send-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: var(--primary-color);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  padding: 0;
  box-shadow: 0 2px 6px rgba(59, 130, 246, 0.2);
  flex-shrink: 0;
}

.send-button.active {
  background-color: var(--primary-color);
}

.send-button.active:active {
  transform: scale(0.95);
  background-color: var(--primary-dark);
}

.send-button:not(.active) {
  background-color: #f3f4f6;
  color: #9ca3af;
  box-shadow: none;
}

/* 加载动画 */
.typing-indicator {
  padding: 20rpx;
  display: flex;
  gap: 8rpx;
  margin-left: 100rpx;
}

.typing-indicator .dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: var(--text-secondary-light);
  animation: typing 1.5s infinite ease-in-out;
}

.typing-indicator .dot:nth-child(2) {
  animation-delay: 0.2s;
}

.typing-indicator .dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes typing {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

/* 模态框 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background-color: white;
  border-radius: 24rpx;
  overflow: hidden;
  animation: modalShow 0.3s ease;
}

@keyframes modalShow {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.modal-header {
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-light);
  border-bottom: 1px solid var(--border-light);
}

.modal-body {
  padding: 40rpx 30rpx;
  color: var(--text-secondary-light);
  font-size: 28rpx;
  line-height: 1.5;
}

.modal-footer {
  display: flex;
  border-top: 1px solid var(--border-light);
}

.modal-btn {
  flex: 1;
  height: 100rpx;
  font-size: 32rpx;
  background: none;
  border-radius: 0;
}

.modal-btn.cancel {
  color: var(--text-secondary-light);
}

.modal-btn.confirm {
  color: #ef4444;
  font-weight: 500;
}

/* 富文本样式 */
.ai-content rich-text {
  line-height: 1.6;
}

/* 代码块样式 */
.code-block {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 16rpx;
  margin: 16rpx 0;
  font-family: monospace;
  white-space: pre-wrap;
  overflow-x: auto;
}

@media (prefers-color-scheme: dark) {
  .code-block {
    background-color: #2d3748;
  }
}

/* 暗色模式适配 */
@media (prefers-color-scheme: dark) {
  .chat-container {
    background-color: var(--background-dark);
  }

  .chat-item.active {
    background-color: rgba(59, 130, 246, 0.2);
  }

  .chat-title {
    color: var(--text-dark);
  }

  .chat-time {
    color: var(--text-secondary-dark);
  }

  .top-bar {
    background-color: rgba(24, 24, 27, 0.95);
  }

  .top-bar .chat-title {
    color: var(--text-dark);
  }

  .message-ai .message-bubble {
    background-color: #27272a;
    color: var(--text-dark);
  }

  .message-input {
    background-color: var(--background-dark);
    border-color: var(--border-dark);
    color: var(--text-dark);
  }

  .message-input:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
  }

  .input-area {
    background-color: rgba(24, 24, 27, 0.95);
  }

  .send-button:not(.active) {
    background-color: #27272a;
    color: #6b7280;
  }

  .modal-content {
    background-color: var(--background-dark);
  }

  .modal-header {
    color: var(--text-dark);
    border-color: var(--border-dark);
  }

  .modal-body {
    color: var(--text-secondary-dark);
  }

  .modal-footer {
    border-color: var(--border-dark);
  }

  .modal-btn.cancel {
    color: var(--text-secondary-dark);
  }
  
  .delete-btn {
    background-color: rgba(39, 39, 42, 0.8);
  }
}
