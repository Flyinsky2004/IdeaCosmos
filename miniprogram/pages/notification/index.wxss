/* 全局容器 */
.container {
  padding: 20rpx;
  background-color: #18181b; /* 暗色背景 */
  min-height: 100vh;
  color: #f3f4f6;
  box-sizing: border-box;
}

/* 顶部标题栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  border-bottom: 1px solid rgba(63, 63, 70, 0.5);
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: rgba(24, 24, 27, 0.98);
  backdrop-filter: blur(10rpx);
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  color: #f3f4f6;
  display: flex;
  align-items: center;
}

.title::before {
  content: '';
  display: block;
  height: 36rpx;
  width: 8rpx;
  background: linear-gradient(to bottom, #3b82f6, #06b6d4);
  border-radius: 4rpx;
  margin-right: 16rpx;
  box-shadow: 0 0 12rpx rgba(59, 130, 246, 0.5);
}

.actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  transition: all 0.3s;
}

.action-btn text {
  margin-left: 8rpx;
}

.read-all-btn {
  background-color: rgba(59, 130, 246, 0.2);
  color: #3b82f6;
  border: 1px solid rgba(59, 130, 246, 0.3);
}

.read-all-btn:active {
  background-color: rgba(59, 130, 246, 0.3);
  transform: translateY(2rpx);
}

.delete-all-btn {
  background-color: rgba(239, 68, 68, 0.2);
  color: #ef4444;
  border: 1px solid rgba(239, 68, 68, 0.3);
}

.delete-all-btn:active {
  background-color: rgba(239, 68, 68, 0.3);
  transform: translateY(2rpx);
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(63, 63, 70, 0.5);
  border-top: 4rpx solid #3b82f6;
  border-right: 4rpx solid #06b6d4;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  box-shadow: 0 0 20rpx rgba(59, 130, 246, 0.2);
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 标签容器 */
.tabs-container {
  margin-bottom: 30rpx;
  overflow-x: auto;
  position: sticky;
  top: 90rpx;
  z-index: 99;
  background-color: rgba(24, 24, 27, 0.95);
  backdrop-filter: blur(10rpx);
  padding: 10rpx 0;
}

/* 隐藏滚动条但保留功能 */
.tabs-container::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
}

.tabs {
  display: flex;
  padding: 10rpx 0;
  flex-wrap: nowrap;
}

.tab {
  display: inline-block;
  padding: 16rpx 30rpx;
  margin-right: 20rpx;
  background-color: rgba(63, 63, 70, 0.6);
  color: #9ca3af;
  border-radius: 30rpx;
  font-size: 28rpx;
  transition: all 0.3s;
  border: 1px solid rgba(63, 63, 70, 0.7);
  white-space: nowrap;
}

.tab.active {
  background: linear-gradient(to right, #3b82f6, #06b6d4);
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
  border-color: transparent;
  transform: translateY(-2rpx);
}

.tab:active {
  transform: translateY(-2rpx);
}

/* 通知列表 */
.notification-list {
  padding-bottom: 120rpx; /* 增加底部间距，防止被返回顶部按钮遮挡 */
}

.notification-item {
  display: flex;
  background-color: rgba(39, 39, 42, 0.8);
  padding: 30rpx;
  margin-bottom: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
  border: 1px solid rgba(63, 63, 70, 0.7);
  animation: fadeIn 0.6s ease-out;
}

.notification-item:nth-child(2n) {
  animation-delay: 0.1s;
}

.notification-item:nth-child(3n) {
  animation-delay: 0.2s;
}

.notification-item.unread {
  border-left: 8rpx solid #3b82f6;
}

.notification-item:active {
  background-color: rgba(39, 39, 42, 0.6);
  border-color: rgba(59, 130, 246, 0.5);
  transform: translateY(-2rpx);
}

.notification-icon {
  margin-right: 24rpx;
  color: #3b82f6;
  font-size: 40rpx;
  flex-shrink: 0;
  display: flex;
  align-items: flex-start;
  padding-top: 6rpx;
}

.notification-content {
  flex: 1;
  min-width: 0; /* 修复溢出问题 */
}

.notification-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.notification-title {
  font-weight: bold;
  color: #f3f4f6;
  font-size: 30rpx;
  margin-right: 20rpx;
  flex: 1;
  word-break: break-all;
}

.notification-time {
  font-size: 24rpx;
  color: #9ca3af;
  flex-shrink: 0;
}

.notification-text {
  margin-bottom: 24rpx;
  font-size: 28rpx;
  color: #9ca3af;
  line-height: 1.5;
  word-wrap: break-word;
  word-break: break-all;
}

.notification-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
}

.notification-type {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  background-color: rgba(63, 63, 70, 0.6);
  color: #9ca3af;
  border-radius: 30rpx;
  flex-shrink: 0;
}

.notification-actions {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.action-read, .action-delete {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

.action-read {
  background-color: rgba(59, 130, 246, 0.2);
  color: #3b82f6;
}

.action-delete {
  background-color: rgba(239, 68, 68, 0.2);
  color: #ef4444;
}

.action-read:active, .action-delete:active {
  opacity: 0.8;
  transform: translateY(2rpx);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 0;
  animation: fadeIn 0.5s ease-out;
}

.empty-icon {
  font-size: 120rpx;
  color: #4b5563;
  margin-bottom: 24rpx;
}

.empty-text {
  color: #9ca3af;
  font-size: 30rpx;
}

/* 回到顶部按钮 */
.back-to-top {
  position: fixed;
  right: 40rpx;
  bottom: 80rpx;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background: linear-gradient(to right, #3b82f6, #06b6d4);
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 16rpx rgba(59, 130, 246, 0.3);
  animation: fadeIn 0.3s ease;
  z-index: 100;
  font-size: 30rpx;
}

.back-to-top:active {
  transform: scale(0.95);
  opacity: 0.9;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInRight {
  from { opacity: 0; transform: translateX(30rpx); }
  to { opacity: 1; transform: translateX(0); }
}

@keyframes slideInLeft {
  from { opacity: 0; transform: translateX(-30rpx); }
  to { opacity: 1; transform: translateX(0); }
}

