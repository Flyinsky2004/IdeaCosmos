<!--pages/notification/index.wxml-->
<view class="container">
  <view class="notification-list">
    <block wx:if="{{notifications.length > 0}}">
      <view wx:for="{{notifications}}" wx:key="index" class="notification-item">
        <!-- 通知内容将在这里显示 -->
      </view>
    </block>
    <view wx:else class="empty-state">
      <text>暂无通知</text>
    </view>
  </view>
</view>