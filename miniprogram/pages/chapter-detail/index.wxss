.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 800rpx;
}

/* 导航栏 */
.nav-bar {
  padding: 20rpx 30rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #eee;
}

.back-btn {
  display: flex;
  align-items: center;
  gap: 10rpx;
  color: #666;
  font-size: 28rpx;
}

.back-icon {
  font-size: 36rpx;
}

.project-name {
  margin-left: 20rpx;
  color: #999;
  font-size: 28rpx;
}

/* 章节容器 */
.chapter-container {
  padding: 30rpx;
}

/* 章节头部 */
.chapter-header {
  background: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.chapter-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.chapter-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  display: block;
  line-height: 1.6;
}

.chapter-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 30rpx;
  padding-top: 30rpx;
  border-top: 2rpx solid #eee;
}

.meta-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.meta-icon {
  font-size: 32rpx;
}

.meta-text {
  font-size: 24rpx;
  color: #999;
}

/* 音频播放器 */
.audio-player {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.audio-header {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 20rpx;
}

.audio-icon {
  font-size: 32rpx;
}

.audio-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 内容区域 */
.content-container {
  background: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
}

.font-control {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.font-buttons {
  display: flex;
  background: #f5f5f5;
  border-radius: 32rpx;
  padding: 4rpx;
}

.font-btn {
  padding: 10rpx 30rpx;
  font-size: 24rpx;
  color: #666;
  border-radius: 28rpx;
}

.font-btn.active {
  background: #1890ff;
  color: #fff;
}

.chapter-content {
  line-height: 1.8;
}

.chapter-content.small {
  font-size: 28rpx;
}

.chapter-content.medium {
  font-size: 32rpx;
}

.chapter-content.large {
  font-size: 36rpx;
}

/* 情绪评价 */
.emotion-section {
  background: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.section-subtitle {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
  display: block;
}

.selected-emotion {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  color: #666;
}

.emotion-tag {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx 30rpx;
  background: #e6f7ff;
  border-radius: 32rpx;
  color: #1890ff;
}

.emotions-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 0 20rpx;
}

.emotion-item {
  padding: 30rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.emotion-item.selected {
  background: #e6f7ff;
  border-color: #1890ff;
}

.emotion-icon {
  font-size: 48rpx;
  margin-bottom: 16rpx;
  display: block;
}

.emotion-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.emotion-desc {
  font-size: 24rpx;
  color: #999;
}

/* 评论区域 */
.comments-section {
  background: #fff;
  padding: 40rpx;
  border-radius: 16rpx;
}

.comment-input {
  margin-bottom: 30rpx;
}

.comment-input textarea {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.submit-btn {
  float: right;
  padding: 16rpx 40rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 32rpx;
  font-size: 28rpx;
}

.submit-btn[disabled] {
  background: #ccc;
}

.login-tip {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  display: block;
  clear: both;
  padding-top: 20rpx;
}

.login-link {
  color: #1890ff;
}

.comment-types {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
  border-bottom: 2rpx solid #eee;
  padding-bottom: 20rpx;
}

.type-btn {
  padding: 10rpx 30rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 32rpx;
}

.type-btn.active {
  background: #e6f7ff;
  color: #1890ff;
}

.comments-list {
  padding-top: 20rpx;
}

.no-comments {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}

.comment-item {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #eee;
}

.commenter-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.commenter-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.author-tag {
  padding: 4rpx 16rpx;
  background: #f0f5ff;
  color: #2f54eb;
  border-radius: 24rpx;
  font-size: 22rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  display: block;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
} 