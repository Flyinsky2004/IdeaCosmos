/* 容器 */
.container {
  min-height: 100vh;
  background-color: var(--bg-color, #f5f5f5);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid var(--spinner-color, #e5e7eb);
  border-top-color: var(--primary-color, #1890ff);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  color: var(--text-secondary, #666);
  font-size: 28rpx;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* 项目头部 */
.project-header {
  position: relative;
  background: var(--card-bg, #fff);
  border-radius: 0 0 40rpx 40rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.project-cover {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
}

.header-content {
  padding: 40rpx;
}

.project-info {
  margin-bottom: 40rpx;
}

.project-title {
  font-size: 44rpx;
  font-weight: bold;
  color: var(--text-primary, #333);
  margin-bottom: 16rpx;
  display: block;
}

.project-type {
  font-size: 28rpx;
  color: var(--primary-color, #1890ff);
  margin-bottom: 20rpx;
  display: block;
}

/* 数据统计 */
.stats-container {
  display: flex;
  gap: 30rpx;
  margin-top: 20rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: var(--stats-bg, rgba(24, 144, 255, 0.1));
  border-radius: 32rpx;
}

.stat-icon {
  font-size: 32rpx;
}

.stat-value {
  font-size: 26rpx;
  color: var(--text-secondary, #666);
}

/* 描述部分 */
.description-section {
  margin-bottom: 30rpx;
  padding: 30rpx 0;
  border-bottom: 2rpx solid var(--border-color, #eee);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary, #333);
  margin-bottom: 20rpx;
  display: block;
}

.description-text {
  font-size: 28rpx;
  color: var(--text-secondary, #666);
  line-height: 1.6;
}

/* 标签样式 */
.tags-section {
  margin-bottom: 30rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  padding: 8rpx 24rpx;
  background: var(--tag-bg, rgba(24, 144, 255, 0.1));
  color: var(--primary-color, #1890ff);
  border-radius: 32rpx;
  font-size: 24rpx;
}

.market-tag {
  background: var(--market-tag-bg, rgba(16, 185, 129, 0.1));
  color: var(--success-color, #10b981);
}

/* 团队信息 */
.team-section {
  padding-top: 30rpx;
  border-top: 2rpx solid var(--border-color, #eee);
}

.team-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.team-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.team-name {
  font-size: 28rpx;
  color: var(--text-secondary, #666);
}

/* 卡片样式 */
.section-card {
  margin: 0 30rpx 30rpx;
  padding: 40rpx;
  background: var(--card-bg, #fff);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx var(--shadow-color, rgba(0, 0, 0, 0.05));
}

/* 角色列表 */
.characters-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin: 20rpx 0;
}

.character-item {
  background: var(--item-bg, #f8f8f8);
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.character-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 16rpx;
}

.character-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-primary, #333);
  text-align: center;
  margin-bottom: 8rpx;
}

.character-desc {
  font-size: 24rpx;
  color: var(--text-secondary, #666);
  text-align: center;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 章节列表 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.chapter-count {
  font-size: 24rpx;
  color: var(--text-secondary, #666);
}

.chapters-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.chapter-item {
  padding: 30rpx;
  background: var(--item-bg, #f8f8f8);
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.chapter-item:active {
  transform: scale(0.98);
}

.chapter-item.pending {
  opacity: 0.8;
}

.chapter-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.chapter-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-primary, #333);
}

.chapter-status {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 24rpx;
}

.chapter-status.pending {
  background: var(--warning-bg, #fff7e6);
  color: var(--warning-color, #fa8c16);
}

.chapter-status.published {
  background: var(--success-bg, #e6fff2);
  color: var(--success-color, #10b981);
}

.chapter-desc {
  font-size: 28rpx;
  color: var(--text-secondary, #666);
  margin-bottom: 16rpx;
  display: block;
}

.chapter-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: var(--text-tertiary, #999);
}

/* 评论区域 */
.comment-input {
  margin-bottom: 30rpx;
}

.input-area {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  background: var(--input-bg, #f8f8f8);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: var(--text-primary, #333);
}

.placeholder-style {
  color: var(--text-placeholder, #999);
}

.submit-btn {
  float: right;
  padding: 16rpx 40rpx;
  background: var(--primary-color, #1890ff);
  color: #fff;
  border-radius: 32rpx;
  font-size: 28rpx;
}

.comments-list {
  margin-top: 30rpx;
}

.comment-item {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 0;
  border-bottom: 2rpx solid var(--border-color, #eee);
}

.commenter-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.commenter-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-primary, #333);
}

.comment-text {
  font-size: 28rpx;
  color: var(--text-secondary, #666);
  margin-bottom: 12rpx;
  display: block;
}

.comment-time {
  font-size: 24rpx;
  color: var(--text-tertiary, #999);
}

.empty-comments {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: var(--text-tertiary, #999);
}

/* 错误状态 */
.error-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400rpx;
}

.error-text {
  font-size: 28rpx;
  color: var(--text-tertiary, #999);
}

/* 暗色模式 */
@media (prefers-color-scheme: dark) {
  page {
    --bg-color: #18181b;
    --card-bg: #27272a;
    --text-primary: #e5e7eb;
    --text-secondary: #9ca3af;
    --text-tertiary: #6b7280;
    --text-placeholder: #4b5563;
    --border-color: #374151;
    --primary-color: #60a5fa;
    --success-color: #34d399;
    --warning-color: #fbbf24;
    --item-bg: #3f3f46;
    --input-bg: #3f3f46;
    --stats-bg: rgba(96, 165, 250, 0.2);
    --tag-bg: rgba(96, 165, 250, 0.2);
    --market-tag-bg: rgba(52, 211, 153, 0.2);
    --success-bg: rgba(52, 211, 153, 0.2);
    --warning-bg: rgba(251, 191, 36, 0.2);
    --spinner-color: #374151;
    --shadow-color: rgba(0, 0, 0, 0.3);
  }
} 