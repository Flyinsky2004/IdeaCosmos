/* pages/project-detail/index.wxss */
.container {
  min-height: 100vh;
  background-color: #18181b;
  color: #f3f4f6;
  padding-bottom: 100rpx; /* 为底部操作栏留出空间 */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  width: 100%;
  overflow-x: hidden; /* 防止水平溢出 */
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  width: 100%;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 3px solid rgba(63, 63, 70, 0.5);
  border-top: 3px solid #3b82f6;
  border-right: 3px solid #06b6d4;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 16px;
  box-shadow: 0 0 16px rgba(59, 130, 246, 0.2);
}

.loading-text {
  color: #9ca3af;
  font-size: 14px;
  letter-spacing: 1px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 项目头部 */
.project-header {
  position: relative;
  background-color: #18181b;
  overflow: hidden;
  width: 100%;
}

.cover-container {
  position: relative;
  width: 100%;
  height: 400rpx; /* 减小高度 */
}

.project-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.project-type {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  padding: 6rpx 16rpx;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  border-radius: 24rpx;
  color: #fff;
  font-size: 22rpx;
  z-index: 2;
}

.cover-gradient {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 160rpx;
  background: linear-gradient(to top, rgba(24, 24, 27, 1), transparent);
  z-index: 1;
}

.header-content {
  padding: 24rpx 32rpx;
  position: relative;
  margin-top: -60rpx;
  z-index: 2;
}

.project-title {
  font-size: 40rpx; /* 减小字体大小 */
  font-weight: bold;
  color: #f3f4f6;
  margin-bottom: 16rpx;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  word-wrap: break-word; /* 确保长标题能够换行 */
}

/* 作者和统计信息 */
.meta-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  flex-wrap: wrap; /* 允许在小屏幕上换行 */
}

.author-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.author-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  border: 2px solid rgba(59, 130, 246, 0.5);
}

.author-name {
  font-size: 24rpx;
  color: #9ca3af;
}

.stats-info {
  display: flex;
  gap: 16rpx;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 6rpx;
  font-size: 24rpx;
  color: #9ca3af;
  padding: 6rpx 12rpx;
  border-radius: 24rpx;
  background-color: rgba(63, 63, 70, 0.4);
}

.favorite-item {
  transition: all 0.3s;
}

.favorite-item.favorited {
  color: #fbbf24;
  background-color: rgba(251, 191, 36, 0.2);
}

.stat-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

/* 内容区域 */
.content-area {
  padding: 0 24rpx; /* 减小内边距 */
  width: 100%;
  box-sizing: border-box;
}

.content-section {
  margin-bottom: 40rpx;
  animation: fadeIn 0.6s ease-out;
  width: 100%;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  border-bottom: 1px solid rgba(63, 63, 70, 0.5);
  padding-bottom: 12rpx;
  width: 100%;
}

.section-title {
  font-size: 32rpx; /* 减小字体大小 */
  font-weight: bold;
  color: #f3f4f6;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  bottom: 6rpx;
  width: 6rpx;
  background: linear-gradient(to bottom, #3b82f6, #06b6d4);
  border-radius: 3rpx;
}

.chapter-count {
  font-size: 24rpx;
  color: #9ca3af;
  background: rgba(59, 130, 246, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

/* 项目描述 */
.project-desc {
  font-size: 28rpx; /* 减小字体大小 */
  color: #9ca3af;
  line-height: 1.6;
  word-wrap: break-word; /* 确保长文本能够换行 */
}

/* 标签样式 */
.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  width: 100%;
}

.tag {
  padding: 8rpx 16rpx; /* 减小内边距 */
  background-color: rgba(63, 63, 70, 0.6);
  border-radius: 24rpx;
  font-size: 24rpx; /* 减小字体大小 */
  color: #9ca3af;
  transition: all 0.3s;
  margin-bottom: 8rpx;
}

.tag:active {
  transform: scale(0.95);
  background-color: rgba(59, 130, 246, 0.2);
}

.market-tag {
  background-color: rgba(5, 150, 105, 0.2);
  color: #10b981;
}

/* 角色列表 */
.characters-scroll {
  width: 100%;
}

.characters-container {
  display: flex;
  padding: 12rpx 0;
  gap: 16rpx;
}

.character-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 160rpx; /* 减小宽度 */
  background-color: rgba(63, 63, 70, 0.6);
  border-radius: 12rpx;
  padding: 16rpx;
  border: 1px solid rgba(82, 82, 91, 0.5);
  transition: all 0.3s;
  flex-shrink: 0;
}

.character-item:active {
  transform: scale(0.95);
  border-color: rgba(59, 130, 246, 0.5);
}

.character-avatar {
  width: 100rpx; /* 减小尺寸 */
  height: 100rpx; /* 减小尺寸 */
  border-radius: 50%;
  border: 2px solid rgba(59, 130, 246, 0.5);
  margin-bottom: 12rpx;
}

.character-info {
  width: 100%;
  text-align: center;
}

.character-name {
  font-size: 24rpx; /* 减小字体大小 */
  font-weight: 500;
  color: #f3f4f6;
  margin-bottom: 6rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.character-desc {
  font-size: 20rpx; /* 减小字体大小 */
  color: #9ca3af;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  line-height: 1.3;
}

/* 章节列表 */
.chapters-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  width: 100%;
}

.chapter-item {
  padding: 20rpx; /* 减小内边距 */
  background-color: rgba(63, 63, 70, 0.6);
  border-radius: 12rpx;
  border: 1px solid rgba(82, 82, 91, 0.5);
  transition: all 0.3s;
  width: 100%;
  box-sizing: border-box;
}

.chapter-item:active {
  transform: scale(0.98);
  background-color: rgba(63, 63, 70, 0.8);
  border-color: rgba(59, 130, 246, 0.5);
}

.chapter-item.pending {
  opacity: 0.7;
}

.chapter-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  flex-wrap: wrap; /* 允许在小屏幕上换行 */
}

.chapter-title {
  font-size: 28rpx; /* 减小字体大小 */
  font-weight: 500;
  color: #f3f4f6;
  margin-right: 12rpx;
  margin-bottom: 6rpx;
}

.chapter-status {
  font-size: 20rpx; /* 减小字体大小 */
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  white-space: nowrap;
}

.chapter-status.pending {
  background-color: rgba(245, 158, 11, 0.2);
  color: #f59e0b;
}

.chapter-status.published {
  background-color: rgba(5, 150, 105, 0.2);
  color: #10b981;
}

.chapter-desc {
  font-size: 24rpx; /* 减小字体大小 */
  color: #9ca3af;
  margin-bottom: 12rpx;
  display: block;
  line-height: 1.5;
  word-wrap: break-word; /* 确保长文本能够换行 */
}

.chapter-meta {
  display: flex;
  justify-content: space-between;
  font-size: 20rpx; /* 减小字体大小 */
  color: #6b7280;
  flex-wrap: wrap; /* 允许在小屏幕上换行 */
}

.update-time, .word-count {
  margin-bottom: 4rpx;
}

/* 评论区域 */
.comment-input {
  margin-bottom: 24rpx;
  width: 100%;
}

.input-area {
  width: 100%;
  height: 140rpx; /* 减小高度 */
  padding: 16rpx;
  background-color: rgba(63, 63, 70, 0.6);
  border: 2rpx solid rgba(82, 82, 91, 0.5);
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  font-size: 26rpx; /* 减小字体大小 */
  color: #f3f4f6;
  box-sizing: border-box;
}

.placeholder-style {
  color: #6b7280;
}

.submit-btn {
  float: right;
  padding: 8rpx 24rpx;
  background: linear-gradient(to right, #3b82f6, #06b6d4);
  color: #fff;
  border-radius: 10rpx;
  font-size: 26rpx; /* 减小字体大小 */
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
  border: none;
}

.submit-btn:active {
  opacity: 0.9;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(59, 130, 246, 0.2);
}

.comments-list {
  margin-top: 24rpx;
  width: 100%;
}

.comment-item {
  display: flex;
  gap: 12rpx;
  padding: 16rpx 0;
  border-bottom: 1px solid rgba(63, 63, 70, 0.5);
  width: 100%;
}

.comment-item:last-child {
  border-bottom: none;
}

.commenter-avatar {
  width: 48rpx; /* 减小尺寸 */
  height: 48rpx; /* 减小尺寸 */
  border-radius: 50%;
  border: 2px solid rgba(59, 130, 246, 0.5);
  flex-shrink: 0;
}

.comment-content {
  flex: 1;
  min-width: 0; /* 确保flex子项可以缩小到比内容更小 */
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6rpx;
  flex-wrap: wrap; /* 允许在小屏幕上换行 */
}

.commenter-name {
  font-size: 24rpx; /* 减小字体大小 */
  font-weight: 500;
  color: #f3f4f6;
  margin-right: 12rpx;
}

.comment-time {
  font-size: 20rpx; /* 减小字体大小 */
  color: #6b7280;
}

.comment-text {
  font-size: 24rpx; /* 减小字体大小 */
  color: #9ca3af;
  line-height: 1.5;
  word-wrap: break-word; /* 确保长文本能够换行 */
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  padding: 16rpx 24rpx;
  background-color: rgba(24, 24, 27, 0.95);
  backdrop-filter: blur(10px);
  border-top: 1px solid rgba(63, 63, 70, 0.7);
  z-index: 100;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: transparent;
  color: #9ca3af;
  font-size: 24rpx; /* 减小字体大小 */
  padding: 0;
  line-height: normal;
  border: none;
  width: 120rpx; /* 减小宽度 */
}

.action-btn::after {
  border: none;
}

.btn-icon {
  font-size: 32rpx; /* 减小字体大小 */
  margin-bottom: 6rpx;
}

.favorite-btn.favorited {
  color: #fbbf24;
}

.share-btn {
  color: #3b82f6;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  text-align: center;
  width: 100%;
}

.empty-icon {
  margin-bottom: 16rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx; /* 减小字体大小 */
  font-weight: bold;
  color: #9ca3af;
  margin-bottom: 6rpx;
}

.empty-subtext {
  font-size: 24rpx; /* 减小字体大小 */
  color: #6b7280;
}

/* 错误状态 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  text-align: center;
  padding: 0 32rpx;
  width: 100%;
}

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 暗色模式适配 */
@media (prefers-color-scheme: dark) {
  .project-header {
    background-color: #18181b;
  }

  .project-title,
  .section-title,
  .chapter-title,
  .character-name,
  .commenter-name {
    color: #e5e7eb;
  }

  .project-desc,
  .chapter-desc,
  .comment-text,
  .author-name {
    color: #9ca3af;
  }

  .input-area {
    background-color: #27272a;
    border-color: #374151;
    color: #e5e7eb;
  }

  .character-item,
  .chapter-item {
    background-color: #27272a;
    border-color: #374151;
  }

  .tag {
    background-color: #27272a;
  }
} 