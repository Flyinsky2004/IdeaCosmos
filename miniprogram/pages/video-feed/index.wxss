/* 视频页面容器 */
.video-feed-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-color: #000;
  overflow: hidden;
}

/* 顶部导航栏 */
.navigation-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 30rpx 20rpx;
  background: linear-gradient(to bottom, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 100%);
}

.navigation-bar .title {
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
}

.navigation-bar .close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-close {
  color: #fff;
  font-size: 48rpx;
  font-weight: 300;
}

/* 视频内容包装器 */
.video-content-wrapper {
  position: relative;
  width: 100%;
  height: 100vh;
}

/* 视频滑动区域 */
.video-swiper {
  width: 100%;
  height: 100vh;
}

.video-item {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.video-player {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 固定UI层 */
.fixed-ui-layer {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  pointer-events: none; /* 允许点击穿透到视频层 */
}

/* 视频信息层 */
.video-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 40rpx 30rpx 0rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0) 100%);
  color: #fff;
  pointer-events: auto; /* 确保此区域可以点击 */
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
}

.username {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
  display: block;
}

.time {
  font-size: 24rpx;
  opacity: 0.8;
  display: block;
}

.follow-btn {
  background-color: #3b82f6;
  color: #fff;
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  border-radius: 50rpx;
  margin: 0;
  margin-left: 20rpx;
  line-height: 1.5;
  height: auto;
}

.video-description {
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
  display: block;
}

.description {
  font-size: 28rpx;
  opacity: 0.8;
  display: block;
}

/* 交互按钮组 */
.interaction-buttons {
  position: absolute;
  right: 30rpx;
  bottom: 240rpx;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
  pointer-events: auto; /* 确保此区域可以点击 */
}

.interaction-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.icon-container {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.icon-container.active {
  color: #ff4757;
}

.icon {
  width: 48rpx;
  height: 48rpx;
}

.count {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
}

/* 加载提示 */
.loading-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 20;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 无视频提示 */
.no-videos {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #000;
  color: #fff;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.empty-desc {
  font-size: 28rpx;
  opacity: 0.7;
  text-align: center;
  max-width: 70%;
}

/* 评论模态框 */
.comment-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.3s, visibility 0.3s;
}

.comment-modal.show {
  visibility: visible;
  opacity: 1;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s;
  height: 70vh;
  display: flex;
  flex-direction: column;
}

.comment-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.comments-list {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
}

.comment-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.comment-avatar {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-content {
  flex: 1;
}

.comment-username {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 15rpx;
}

.comment-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.comment-time {
  font-size: 24rpx;
  color: #999;
}

.comment-like {
  display: flex;
  align-items: center;
}

.like-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}

.like-count {
  font-size: 24rpx;
  color: #999;
}

.empty-comments {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-comment-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-comment-text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.comment-input-box {
  padding: 20rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
  background-color: #fff;
}

.comment-input {
  flex: 1;
  height: 70rpx;
  background-color: #f5f5f5;
  border-radius: 35rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.send-btn {
  background-color: #f0f0f0;
  color: #999;
  font-size: 28rpx;
  padding: 0 30rpx;
  margin-left: 20rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
}

.send-btn.active {
  background-color: #3b82f6;
  color: #fff;
} 