/* components/input/index.wxss */
.custom-input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  background-color: rgba(63, 63, 70, 0.6);
  border: 2rpx solid rgba(82, 82, 91, 0.5);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #f3f4f6;
  transition: all 0.3s;
  box-sizing: border-box;
}

.custom-input:focus {
  border-color: #3b82f6;
  background-color: rgba(63, 63, 70, 0.8);
  box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.2);
}

/* 暗色模式适配 */
@media (prefers-color-scheme: dark) {
  .custom-input {
    background-color: #27272a;
    border-color: #374151;
    color: #e5e7eb;
  }
} 