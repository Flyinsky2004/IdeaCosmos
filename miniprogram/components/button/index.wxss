/* components/button/index.wxss */
.custom-btn {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.block {
  width: 100%;
}

.primary {
  background: linear-gradient(to right, #3b82f6, #06b6d4);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
  border: none;
}

.success {
  background: linear-gradient(to right, #059669, #10b981);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(5, 150, 105, 0.3);
  border: none;
}

.danger {
  background-color: transparent;
  color: #ef4444;
  border: 2rpx solid rgba(239, 68, 68, 0.5);
}

.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.btn-hover {
  opacity: 0.9;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(59, 130, 246, 0.2);
}

.btn-hover-danger {
  opacity: 0.9;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(239, 68, 68, 0.2);
} 