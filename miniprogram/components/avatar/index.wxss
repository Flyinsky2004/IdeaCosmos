/* components/avatar/index.wxss */
.avatar-wrapper {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 4rpx solid rgba(59, 130, 246, 0.5);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.2);
  transition: transform 0.3s;
}

.avatar-wrapper:active {
  transform: scale(0.98);
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s;
  backdrop-filter: blur(2px);
}

.avatar-wrapper:active .avatar-overlay {
  opacity: 1;
}

.camera-icon {
  width: 48rpx;
  height: 48rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
}

.icon-circle {
  width: 24rpx;
  height: 24rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
}

.overlay-text {
  color: #fff;
  font-size: 24rpx;
  margin-top: 8rpx;
} 